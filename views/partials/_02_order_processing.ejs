<div class="col-lg-10 bg-grey">
  <div class="p-5">
    <h3 class="fw-bold mb-5 mt-2 pt-1">Order Status</h3>
    <!--Estimated Time Input-->
    <div class="row g-3 align-items-center mb-4">
      <div class="row g-3 align-items-center" ; style="width: 1000px;">
        <div class="col-auto">
          <label for="estimated-time" class="col-form-label">Estimated Time: </label>
        </div>
        <div class="col-auto">
          <!--Insert time-->
          <span>20</span><span> Min</span>
        </div>
      </div>
    </div>
    <!--Divider Line-->
    <hr class="my-4">

    <!--Waiting for restaurant's confirmation...-->
    <div class="d-flex justify-content-center mb-4">
      <div class="row g-3 align-items-center" style="width: 80%;">
        <h4>Waiting for restaurant's confirmation...</h4>
        <div class="progress">
          <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: 25%"
            aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
      </div>
    </div>
    <!--Divider Line-->
    <hr class="my-4">

    <!--Order Processing-->
    <div class="d-flex justify-content-center mb-4">
      <div class="row g-3 align-items-center" style="width: 80%;">
        <h4>Order Processing...</h4>
        <div class="progress">
          <div class="progress-bar bg-warning" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
      </div>
    </div>
    <!--Divider Line-->
    <hr class="my-4">

    <!--Order Ready-->
    <div class="d-flex justify-content-center mb-4">
      <div class="row g-3 align-items-center" style="width: 80%;">
        <div>
          <h4>Order Ready!</h4>
        </div>
        <div class="progress">
          <div class="progress-bar progress-bar-striped bg-danger" role="progressbar" style="width: 100%"
            aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
      </div>
    </div>
    <!--Divider Line-->
    <hr class="my-4">

    <!--Order Ready-->
    <div class="d-flex justify-content-center mb-4">
      <div class="row g-3 align-items-center">
        <div class="col-auto">
          <h4 class="text-danger"><b>Order Cancelled, Sorry!</b></h4>
        </div>
      </div>
    </div>
    <!--Back to Menu Link-->
    <div class="pt-5">
      <h6 class="mb-0"><a href="/customer_menus" class="text-body"><i class="fas fa-long-arrow-alt-left me-2"></i>Back
          to Menu</a></h6>
    </div>
  </div>
</div>
