<!DOCTYPE html>
<html lang="en">

<head>
  <title>Home Page</title>

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!--Bootstrap-->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  <link href="https://getbootstrap.com/docs/5.2/assets/css/docs.css" rel="stylesheet">

  <!--feathericons-->
  <script src="https://unpkg.com/feather-icons"></script>

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Open+Sans:wght@300;400;600&family=Poppins:wght@200;400;600&display=swap" rel="stylesheet">

  <!-- Stylesheets -->
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
  <script defer src="/scripts/restaurant-orders.js"></script>
</head>

<body>
  <!--Header-->
  <%- include('partials/_header_r_order') %>
    <div>
      <section class=" h-110 h-custom" style="height: 1200px;">
        <div class="container py-5 h-100">
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12">
              <div class="card card-registration card-registration-2" style="border-radius: 15px;">
                <div class="card-body p-0">
                  <div class="row g-0 d-flex-row">
                    <div class="col-lg-8">
                      <div class="p-5">
                        <div class="d-flex justify-content-between align-items-center mb-5">
                          <h1 class="fw-bold mb-0 text-black">New Customer Order</h1>
                          <!-- <h6 class="mb-0 text-muted" id="order-itm-qunatity-restaurant">0 items</h6> -->
                        </div>
                        <div class="fw-bold mb-0 text-black">
                          <h2 id="restaurant-customer-order-number">
                            Customer Order Number: 0
                          </h2>
                        </div>
                        <hr class="my-4">

                        <div id="restaurant-order-container">

                        </div>

                        <div class="pt-5" id="rest-order-footer-section"
                          style="display: flex; justify-content: space-between;">
                          <div>
                            <h6 class="mb-0"><a href="/restaurant_menus" class="text-body"><i
                                  class="fas fa-long-arrow-alt-left me-2"></i>Back to Menu</a></h6>
                          </div>
                          <h6 class="mb-0 text-muted" id="order-itm-qunatity-restaurant">0 items</h6>
                        </div>
                      </div>
                    </div>
                    <div id="order-status-btn-container" class="col-lg-4 bg-grey">
                      <div id="order-status-btn-bar" class="d-flex-column align-items-center justify-content-center p-5">
                        <h3 class="fw-bold mb-5 mt-2 pt-1">Order Status</h3>


                        <!--Estimated Time Input-->
                        <div class="d-flex justify-content-center mb-4">
                          <div class="row g-3">
                            <!-- <form id="estimated-time-form"> -->
                            <div id="estimated-time-container" class="col-auto">
                              <!-- <input id="estimated-time-input" name="estimated-time" type="number" class="form-control"> -->
                              <button id="estimate-time" type="buttonm" style="margin-top: 1rem;">
                                Accept</button>
                            </div>
                            <!-- </form> -->
                          </div>
                        </div>
                        <!--Divider Line-->
                        <hr class="my-4">

                        <!--Order Ready-->
                        <div class="d-flex justify-content-center mb-4">
                          <div class="row g-3 ">

                            <div id="ready-button-container" class="col-auto">
                              <button id="order-ready" type="button" class="">Ready</button>
                            </div>
                          </div>
                        </div>
                        <!--Divider Line-->
                        <hr class="my-4">

                        <!--Order Cancel-->
                        <div class="d-flex justify-content-center mb-4">
                          <div class="row g-3">
                            <div id="cancel-order-container" class="col-auto">
                              <button id="cancel-order" type="button" class="">Cancel</button>
                            </div>
                          </div>
                        </div>

                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
</body>
<!--Bootstrap-->
